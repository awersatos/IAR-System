}


char *Bluetooth_Parser(const char *answer)
{
 uint16_t j; //Счетчик
 uint16_t k; //Счетчик 2
 uint8_t l; 
 char *ans;
 char *out;  
 uint8_t size;
 
 out=NULL;
 size=*answer++;
 
for (j=0 ; j<RX_BufferSize ; j++)
  {
    if (Bluetooth_RxBuffer[j]==*answer)
    {
     k=++j;
     ans=++answer;
     for (l=2 ; l<size ; l++)
     {
       if (Bluetooth_RxBuffer[k++]==*ans++) out=&Bluetooth_RxBuffer[j];
       else {
             out=NULL;
             break;
            }
     }
     if (out!=NULL) return out;
     
    }
  
  }
  
  return NULL;
  
  
}
























